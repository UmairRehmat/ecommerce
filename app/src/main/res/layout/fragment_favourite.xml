<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavFragments.FavouriteFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/category_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="#fff"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="#BDBCBC"
                android:layout_weight="4"
                android:scaleType="fitXY"
                android:src="@drawable/d_man_style" />
  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="#fff"
                android:text="@string/new_arrival"
                android:textColor="#555454"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="3"
                android:background="#fff"
                android:text="$ 100"
                android:textStyle="bold"
                android:textColor="#9C9B9B"
                android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/unFavourite"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/ic_favourite"/>
                <ImageView
                    android:id="@+id/favourite"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/ic_heart"/>
                </RelativeLayout>
     </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
